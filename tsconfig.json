{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@repositories/*": ["./src/repositories/*"],
      "@entities/*": ["./src/entities/*"]
    },
    "target": "es2017",
    "module": "commonjs",
    "allowJs": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*.ts"
  ]
}
